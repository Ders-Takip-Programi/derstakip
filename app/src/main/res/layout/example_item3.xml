<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="100dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260sp"
        android:orientation="horizontal">


        <View
            android:layout_width="5sp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="15dp">


                <TextView
                    android:id="@+id/isimex3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3sp"
                    android:text="İsim:"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/soyisimex3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3sp"
                    android:text="Soyisim:"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/ekle_switch"
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:id="@+id/yapilansayfa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:maxLines="1"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:hint="Yapılan Sayfa"

                     />


                <EditText
                    android:id="@+id/toplamsayfa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:hint="Sayfa Sayısı"

                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">


                <EditText
                    android:id="@+id/artieksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:hint="Artı/Eksi"
                    android:inputType="text" />


                <EditText
                    android:id="@+id/not"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:hint="Not"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/degerlendirme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:maxLines="1"
                    android:hint="Değerlendirme" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp">

                <Button
                    android:id="@+id/odevkayit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/buttonshape"
                    android:text="KAYDET"

                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>