<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anasayfa_ex">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/anasayfa_ex"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:visibility="invisible"
            android:fontFamily="@font/karatay"
            android:text="ANASAYFA"
            android:textColor="#ffffff"
            android:textSize="40sp" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ogrenciekle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    android:layout_marginTop="105sp"
                    app:cardBackgroundColor="@color/float_transparent"
                    app:cardCornerRadius="0sp"
                    app:cardElevation="0sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80sp"
                            android:layout_height="120sp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_plus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:fontFamily="@font/karatay"

                            android:text="Öğrenci Ekle"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ogrenciliste"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="105sp"

                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="@color/float_transparent"
                    app:cardElevation="0sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_list" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/karatay"
                            android:text="Öğrenci Listesi"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/odevekle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12sp"
                    app:cardBackgroundColor="@color/float_transparent"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="50dp"
                    app:cardCornerRadius="0sp"
                    app:cardElevation="0sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_notepad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/karatay"
                            android:text="Ödev Ekle"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/goruntule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="50dp"
                    app:cardBackgroundColor="@color/float_transparent"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0sp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="120dp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_portfolio" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:fontFamily="@font/karatay"
                            android:text="Ödev Listesi"
                            android:textColor="@color/colorAccent"
                            android:textSize="19sp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>




            </GridLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>
