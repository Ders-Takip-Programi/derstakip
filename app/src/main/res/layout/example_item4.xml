<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="100dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:orientation="horizontal">


        <View
            android:layout_width="5sp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:textSize="15dp">



                <TextView
                    android:id="@+id/tarih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3sp"
                    android:text="Tarih"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />

                <Switch
                    android:layout_width="50sp"
                    android:id="@+id/duzenle_switch"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:checked="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:orientation="horizontal"
                android:weightSum="1">


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/yapilangoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:textColor="#000000"
                    android:layout_weight="0.5"
                    android:hint="Yapılan Sayfa"
                    android:maxLines="1"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="15sp" />


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/toplamgoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:hint="Toplam Sayfa"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/artieksigoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:maxLines="1"
                    android:hint="Artı/Eksi"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="15sp" />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/notgoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:maxLines="1"
                    android:hint="Not"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/degerlendirmegoster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginRight="20sp"
                    android:hint="Değerlendirme"
                    app:met_floatingLabel="highlight"
                    android:maxLines="1"
                    app:met_floatingLabelTextSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/kaydet_goster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="180sp"
                    android:background="@drawable/buttonshape"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:text="Kilidi Aç" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>