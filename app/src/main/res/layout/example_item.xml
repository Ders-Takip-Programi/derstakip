<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:id="@+id/layout_exitem2"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:paddingLeft="5dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="2sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="34sp"
                            android:layout_marginLeft="20sp"

                            android:layout_marginTop="6sp"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:textSize="15sp">

                            <TextView
                                android:id="@+id/isimex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/karatay"
                                android:text="İsim:"
                                android:textColor="#000"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/soyisimex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3sp"
                                android:fontFamily="@font/karatay"
                                android:text="Soyisim:"
                                android:textColor="#000"
                                android:textSize="24sp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/son_odev_txt"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:text="Son Eklenen Ödev 02-01-01 Çarşamba" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/saat_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_marginRight="11sp"
                            android:gravity="right"
                            android:text="12:12" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>